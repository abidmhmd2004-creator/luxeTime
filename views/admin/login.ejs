

    <div class="h-full w-full flex flex-col items-center justify-center pt-10 pb-10">
        
        <div class="mb-8 flex flex-col items-center justify-center">
            <div class="size-8 text-primary">
                <span class="material-symbols-outlined !text-[32px]">watch</span>
            </div>
            <div class="text-3xl font-extrabold text-white flex items-center space-x-2">
                <!-- <span class="material-symbols-outlined !text-[32px] text-primary">watch</span> -->
                <span>LUXE TIME</span>
            </div>
            <p class="text-sm tracking-widest uppercase text-primary mt-2">ADMIN PANEL</p>
        </div>

        <div class="bg-card-dark rounded-xl shadow-2xl w-full max-w-sm mx-4 p-8 space-y-6">

            <div class="text-center space-y-1">
                <h2 class="text-2xl font-bold text-white">Admin Sign In</h2>
                <p class="text-sm text-neutral-400">Access the administration dashboard</p>
            </div>



            <form action="/admin/login" method="POST" class="space-y-5" id="loginForm">
                
                <%- include('../partials/alerts') %>

                <div class="relative">
                    <label for="adminEmail" class="absolute left-4 top-1 text-[8px] uppercase text-neutral-500 font-medium tracking-wider">Email Address</label>
                    <input 
                        type="email" 
                        id="adminEmail" 
                        name="email" 
                        placeholder="admin@luxetime.com" 
                        class="custom-input w-full text-white" 
                        title="Please enter a valid email address."
                    />
                                  <p id="emailErr" class="text-xs text-red-500 mt-1 hidden"></p>

                </div>

                <div class="relative">
                    <label for="adminPassword" class="absolute left-4 top-1 text-[8px] uppercase text-neutral-500 font-medium tracking-wider">Password</label>
                    <input 
                        type="password" 
                        id="adminPassword" 
                        name="password" 
                        placeholder="••••••••" 
                        class="custom-input w-full text-white" 
                        title="Password must be at least 8 characters long."
                    />
                </div>
              <p id="passwordErr" class="text-xs text-red-500 mt-1 hidden"></p>

                <button 
                    type="submit" 
                    class="w-full flex items-center justify-center space-x-2 px-4 py-3 rounded-lg bg-primary text-black font-bold hover:bg-green-700 transition shadow-lg shadow-primary/20"
                >
                    <span>SIGN IN</span>
                    <span class="material-symbols-outlined text-base">arrow_forward</span>
                </button>
                
            </form>

            <p class="text-xs text-center text-neutral-500 pt-2">
                <span class="material-symbols-outlined text-sm align-middle mr-1">lock</span>
                Authorized personnel only
            </p>
        </div>
        
    </div>

<script>
  const loginForm = document.getElementById("loginForm");

  const emailInput = document.getElementById("adminEmail");
  const passwordInput = document.getElementById("adminPassword");

  const emailErr = document.getElementById("emailErr");
  const passwordErr = document.getElementById("passwordErr");

  loginForm.addEventListener("submit", (e) => {
    let valid = true;

    emailErr.classList.add("hidden");
    passwordErr.classList.add("hidden");

    emailErr.textContent = "";
    passwordErr.textContent = "";

    const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;

    // EMAIL VALIDATION
    if (emailInput.value.trim() === "") {
      emailErr.textContent = "Email is required";
      emailErr.classList.remove("hidden");
      valid = false;
    } else if (!emailRegex.test(emailInput.value.trim())) {
      emailErr.textContent = "Enter a valid email address";
      emailErr.classList.remove("hidden");
      valid = false;
    }

    // PASSWORD VALIDATION
    if (passwordInput.value.trim() === "") {
      passwordErr.textContent = "Password is required";
      passwordErr.classList.remove("hidden");
      valid = false;
    } else if (passwordInput.value.length < 6) {
      passwordErr.textContent = "Password must be at least 6 characters";
      passwordErr.classList.remove("hidden");
      valid = false;
    }
    if (!valid) {
      e.preventDefault();
    }
  });

  </script>
