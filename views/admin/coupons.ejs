<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

  <%- include('../partials/adminSidebar') %>

  <main class="flex-1 p-8 overflow-y-auto">
    <header class="mb-8">
      <p class="text-[10px] text-gray-500 uppercase tracking-widest">
        / Admin / <span class="text-[#4ade80]">Coupons</span>
      </p>
      <h2 class="text-3xl font-bold mt-1 uppercase tracking-tight text-white">Coupon Management</h2>
      <p class="text-sm text-gray-400">Manage store coupons and discounts.</p>
    </header>

    <div class="bg-[#161b1b] p-5 rounded-2xl mb-8 border border-gray-800 flex flex-wrap justify-between items-center shadow-lg gap-4">
      <form method="GET" action="/admin/coupons" class="flex items-center gap-3">
        <div class="relative">
          <i class="fas fa-search absolute left-3 top-1/2 -translate-y-1/2 text-gray-500 text-xs"></i>
          <input type="text" name="search" value="<%= search || '' %>" placeholder="Search coupons..." class="bg-black border border-gray-700 rounded-lg py-2 pl-9 pr-4 focus:outline-none focus:border-[#4ade80] w-64 text-xs text-white" />
        </div>
        <% if (search && search.trim().length > 0) { %>
        <a href="/admin/coupons" class="text-gray-500 hover:text-red-400 text-xs font-medium border-l border-gray-700 pl-3 transition-colors">
          <i class="fas fa-times-circle"></i> Clear
        </a>
        <% } %>
        <button type="submit" class="bg-[#4ade80] hover:bg-[#22c55e] text-black px-5 py-2 rounded-lg transition-all font-bold text-xs">
          Search
        </button>
      </form>

      <button onclick="openModal()" class="bg-[#4ade80] hover:bg-[#22c55e] text-black px-6 py-2 rounded-lg flex items-center gap-2 font-bold shadow-[0_0_15px_rgba(74,222,128,0.2)] transition-all text-xs">
        <i class="fas fa-plus"></i> Add New Coupon
      </button>
    </div>

    <div class="bg-[#161b1b] rounded-2xl border border-gray-800 overflow-hidden shadow-2xl">
      <div class="p-4 border-b border-gray-800 flex justify-between items-center bg-black/20">
        <h3 class="text-sm font-semibold flex items-center gap-2">
          <i class="fas fa-ticket-alt text-[#4ade80]"></i> All Coupons
        </h3>
        <span class="text-[11px] text-gray-500 uppercase font-medium tracking-wider">
          Total: <%= coupons.length %> results
        </span>
      </div>

      <div class="overflow-x-auto">
        <% if (coupons && coupons.length > 0) { %>
        <table class="w-full text-left border-collapse">
          <thead class="bg-black/50 text-gray-500 text-[10px] uppercase tracking-wider">
            <tr>
              <th class="p-4">Coupon Name</th>
              <th class="p-4">Code</th>
              <th class="p-4">Offer %</th>
              <th class="p-4">Min Purchase</th>
              <th class="p-4">Max Usage</th>
              <th class="p-4">Expiry</th>
              <th class="p-4">Status</th>
              <th class="p-4 text-center">List</th>
              <th class="p-4 text-right">Actions</th>
            </tr>
          </thead>
          <tbody id="couponTableBody" class="divide-y divide-gray-800 text-xs text-gray-300">
            <% coupons.forEach(coupon => { %>
            <tr id="row-<%= coupon._id %>" class="hover:bg-white/5 transition-colors">
              <td class="p-4 font-semibold text-white"><%= coupon.name %></td>
              <td class="p-4">
                <span class="bg-gray-800 px-2 py-1 rounded text-[10px] font-mono border border-gray-700"><%= coupon.code %></span>
              </td>
              <td class="p-4 text-[#4ade80] font-bold"><%= coupon.percentage %>% OFF</td>
              <td class="p-4">â‚¹<%= coupon.minPurchase.toFixed(2) %></td>
              <td class="p-4 text-center"><%= coupon.maxUsage %></td>
              <td class="p-4 <%= new Date(coupon.expiry) < new Date() ? 'text-red-500' : 'text-gray-400' %>">
                <%= new Date(coupon.expiry).toLocaleDateString() %>
              </td>
              <td class="p-4">
                <span id="badge-<%= coupon._id %>" class="px-2 py-0.5 rounded-full text-[9px] uppercase font-black border <%= coupon.isListed ? 'bg-green-500/10 text-green-500 border-green-500/20' : 'bg-red-500/10 text-red-500 border-red-500/20' %>">
                  <%= coupon.isListed ? 'Active' : 'Inactive' %>
                </span>
              </td>
              <td class="p-4 text-center">
                <label class="relative inline-flex items-center cursor-pointer">
                  <input type="checkbox" class="sr-only peer" <%= coupon.isListed ? 'checked' : '' %> onchange="toggleCoupon('<%= coupon._id %>', this)">
                  <div class="w-9 h-5 bg-gray-700 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-4 after:w-4 after:transition-all peer-checked:bg-[#4ade80]"></div>
                </label>
              </td>
              <td class="p-4 text-right space-x-3">
                <button onclick="editCoupon('<%= coupon._id %>', '<%= coupon.name %>', '<%= coupon.code %>', '<%= coupon.percentage %>', '<%= coupon.minPurchase %>', '<%= coupon.maxUsage %>','<%= coupon.maxDiscount %>', '<%= coupon.expiry %>')" class="hover:text-[#4ade80]"><i class="fas fa-edit"></i></button>
                <button onclick="deleteCoupon('<%= coupon._id %>')" class="hover:text-red-500"><i class="fas fa-trash"></i></button>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
        <% } else { %>
        <div class="flex flex-col items-center justify-center py-16">
          <i class="fas fa-ticket-alt text-5xl text-gray-800 mb-4"></i>
          <h4 class="text-xl font-semibold text-gray-500">No Coupons Found</h4>
        </div>
        <% } %>
      </div>
    </div>

    <div id="addCouponModal" class="fixed inset-0 z-50 hidden flex items-center justify-center bg-black/80 backdrop-blur-sm p-4">
      <div class="bg-[#161b1b] w-full max-w-2xl rounded-2xl border border-gray-800 shadow-2xl overflow-hidden">
        <div class="px-8 py-4 border-b border-gray-800/50 flex justify-between items-center">
          <h2 id="modalTitle" class="text-lg font-bold text-white uppercase tracking-tight">Add New Coupon</h2>
          <button onclick="closeModal()" class="text-gray-400 hover:text-red-500 transition-colors"><i class="fas fa-times"></i></button>
        </div>

        <div class="px-8 py-6 max-h-[75vh] overflow-y-auto scrollbar-thin scrollbar-thumb-gray-800">
          <form id="couponForm" class="space-y-6">
            <input type="hidden" id="couponId" name="couponId" />
            <div class="grid grid-cols-2 gap-4">
              <div class="flex flex-col gap-1">
                <label class="text-[10px] font-bold text-gray-400 uppercase tracking-widest">Coupon Name</label>
                <input type="text" id="name" class="bg-black border border-gray-800 rounded-xl py-2 px-4 text-sm focus:border-[#4ade80] outline-none" />
                <span id="nameError" class="text-[9px] text-red-500 hidden italic">Required</span>
              </div>
              <div class="flex flex-col gap-1">
                <label class="text-[10px] font-bold text-gray-400 uppercase tracking-widest">Coupon Code</label>
                <input type="text" id="code" class="bg-black border border-gray-800 rounded-xl py-2 px-4 text-sm text-[#4ade80] font-mono uppercase focus:border-[#4ade80] outline-none" />
                <span id="codeError" class="text-[9px] text-red-500 hidden italic">Required</span>
              </div>
            </div>

            <div class="grid grid-cols-2 gap-4">
              <div class="flex flex-col gap-1">
                <label class="text-[10px] font-bold text-gray-400 uppercase tracking-widest">Offer %</label>
                <input type="number" id="offer" class="bg-black border border-gray-800 rounded-xl py-2 px-4 text-sm outline-none focus:border-[#4ade80]" />
                <span id="offerError" class="text-[9px] text-red-500 hidden italic">1-100 only</span>
              </div>
              <div class="flex flex-col gap-1">
                <label class="text-[10px] font-bold text-gray-400 uppercase tracking-widest">Min. Purchase</label>
                <input type="number" id="minOrder" class="bg-black border border-gray-800 rounded-xl py-2 px-4 text-sm outline-none focus:border-[#4ade80]" />
                <span id="minOrderError" class="text-[9px] text-red-500 hidden italic">Required</span>
              </div>
            </div>

            <div class="grid grid-cols-2 gap-4">
              <div class="flex flex-col gap-1">
                <label class="text-[10px] font-bold text-gray-400 uppercase tracking-widest">Max Usage</label>
                <input type="number" id="maxUsage" class="bg-black border border-gray-800 rounded-xl py-2 px-4 text-sm outline-none focus:border-[#4ade80]" />
                <span id="maxUsageError" class="text-[9px] text-red-500 hidden italic">Required</span>
              </div>
              <div class="flex flex-col gap-1">
                <label class="text-[10px] font-bold text-gray-400 uppercase tracking-widest">Max. Discount</label>
                <input type="number" id="maxDiscount" class="bg-black border border-gray-800 rounded-xl py-2 px-4 text-sm outline-none focus:border-[#4ade80]" />
                <span id="maxDiscountError" class="text-[9px] text-red-500 hidden italic">Required</span>
              </div>
            </div>

            <div class="flex flex-col gap-1">
              <label class="text-[10px] font-bold text-gray-400 uppercase tracking-widest">Expires On</label>
              <input type="date" id="expiryDate" class="bg-black border border-gray-800 rounded-xl py-2 px-4 text-sm outline-none focus:border-[#4ade80] color-scheme-dark" />
              <span id="expiryDateError" class="text-[9px] text-red-500 hidden italic">Required</span>
            </div>

            <div class="flex justify-end gap-3 pt-4 border-t border-gray-800">
              <button type="button" onclick="closeModal()" class="text-xs font-bold text-gray-500 hover:text-white">DISCARD</button>
              <button type="submit" id="submitBtn" class="bg-[#4ade80] hover:bg-[#22c55e] text-black px-8 py-2 rounded-xl font-bold text-xs transition-transform active:scale-95">SAVE CHANGES</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </main>

  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
 
  <script src="/admin/js/coupons.js"></script>

