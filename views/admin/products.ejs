<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

<%- include('../partials/adminSidebar') %>

<main class="flex-1 p-8 overflow-y-auto bg-[#0d0f0d] min-h-screen">
    <div class="flex items-center space-x-2 text-xs text-gray-500 mb-2">
        <i class="fa-solid fa-house"></i> <span>/ Products</span>
    </div>
    
    <div class="flex justify-between items-start mb-8">
        <div>
            <h2 class="text-3xl font-bold text-white tracking-tight">Products</h2>
            <p class="text-sm text-gray-500">Manage all watch products.</p>
        </div>
        <button onclick="window.location.href='/admin/add-products'" class="bg-[#4ade80] text-black px-6 py-2.5 rounded-full text-xs font-bold flex items-center shadow-[0_0_15px_rgba(74,222,128,0.3)] hover:scale-105 transition-all">
            <i class="fa-solid fa-plus mr-2"></i> Add Watch
        </button>
    </div>

    <div class="bg-[#1A1D1A] rounded-t-3xl border-x border-t border-white/5 p-6">
        <div class="flex flex-wrap items-center justify-between gap-4">
            <div class="relative w-full max-w-sm">
                <span class="absolute inset-y-0 left-4 flex items-center text-gray-500">
                    <i class="fa-solid fa-magnifying-glass text-xs"></i>
                </span>
                <input type="text" placeholder="Search by watch name..." 
                    class="w-full bg-[#0a0a0a] border-none text-sm text-white rounded-full py-2.5 pl-10 pr-4 focus:ring-1 focus:ring-[#4ade80] outline-none">
            </div>
            
            <div class="flex items-center space-x-3">
                <button class="bg-[#141a14] text-gray-400 px-4 py-2 rounded-full text-[12px] font-bold border border-white/5 flex items-center hover:text-white transition">
                    All Brands <i class="fa-solid fa-chevron-down ml-2 text-[8px]"></i>
                </button>
                <button class="bg-[#141a14] text-gray-400 px-4 py-2 rounded-full text-[12px] font-bold border border-white/5 flex items-center hover:text-white transition">
                    All Categories <i class="fa-solid fa-chevron-down ml-2 text-[8px]"></i>
                </button>
                <button class="bg-[#141a14] text-gray-400 px-4 py-2 rounded-full text-[12px] font-bold border border-white/5 flex items-center hover:text-white transition">
                    Stock Status <i class="fa-solid fa-chevron-down ml-2 text-[8px]"></i>
                </button>
            </div>
        </div>
    </div>

    <div class="bg-[#1A1D1A] rounded-b-3xl border border-white/5 overflow-hidden shadow-xl">
        <table class="w-full text-left text-[12px]">
            <thead class="bg-black/20 text-gray-500 uppercase tracking-wider border-y border-white/5">
                <tr>
                    <th class="px-6 py-4 font-semibold">Watch Details</th>
                    <th class="px-6 py-4 font-semibold text-center">Brand</th>
                    <th class="px-6 py-4 font-semibold text-center">Color</th>
                    <th class="px-6 py-4 font-semibold text-center">Price</th>
                    <th class="px-6 py-4 font-semibold text-center">Offer Price</th>
                    <th class="px-6 py-4 font-semibold text-center">Offer</th>
                    <th class="px-6 py-4 font-semibold text-center">Stock</th>
                    <th class="px-6 py-4 font-semibold text-center">Status</th>
                    <th class="px-6 py-4 font-semibold text-right">Actions</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-white/5">
                <tr class="hover:bg-white/[0.02] transition">
                    <td class="px-6 py-4">
                        <div class="flex items-center space-x-3">
                            <div class="w-10 h-10 bg-white/5 rounded-full flex items-center justify-center overflow-hidden border border-white/10">
                                <img src="/images/rolex.png" alt="Watch" class="w-8 h-8 object-contain">
                            </div>
                            <div>
                                <p class="text-white font-bold">Rolex Submariner</p>
                                <p class="text-[9px] text-gray-500">Ref. 124060</p>
                            </div>
                        </div>
                    </td>
                    <td class="px-6 py-4 text-center text-gray-400">Rolex</td>
                    <td class="px-6 py-4 text-center">
                        <span class="bg-white/5 text-gray-400 px-3 py-1 rounded-md border border-white/5">Gold</span>
                    </td>
                    <td class="px-6 py-4 text-center text-white font-medium">₹9,000</td>
                    <td class="px-6 py-4 text-center text-gray-400">10%</td>
                    <td class="px-6 py-4 text-center text-[#ff6b6b]">
                        <i class="fa-solid fa-percent border border-current p-1 rounded-sm text-[8px]"></i>
                    </td>
                    <td class="px-6 py-4 text-center">
                        <div class="flex items-center justify-center space-x-1.5">
                            <span class="text-white">24</span>
                            <span class="w-1.5 h-1.5 bg-[#4ade80] rounded-full"></span>
                        </div>
                    </td>
                    <td class="px-6 py-4 text-center">
                        <span class="bg-[#14291d] text-[#4ade80] px-3 py-1 rounded-full text-[9px] font-bold flex items-center justify-center w-fit mx-auto">
                            <span class="w-1 h-1 bg-[#4ade80] rounded-full mr-1.5"></span> Active
                        </span>
                    </td>
                    <td class="px-5 py-4 text-right space-x-2 text-gray-500">
                        <button class="hover:text-white"><i class="fa-solid fa-eye text-[12px]"></i></button>
                        <button class="hover:text-white"><i class="fa-solid fa-pen text-[12px]"></i></button>
                        <button class="hover:text-red-500"><i class="fa-solid fa-trash text-[12px]"></i></button>
                    </td>
                </tr>

                <tr class="hover:bg-white/[0.02] transition">
                    <td class="px-6 py-4">
                        <div class="flex items-center space-x-3">
                            <div class="w-10 h-10 bg-white/5 rounded-full flex items-center justify-center overflow-hidden border border-white/10">
                                <img src="/images/fastrack.png" alt="Watch" class="w-8 h-8 object-contain">
                            </div>
                            <div>
                                <p class="text-white font-bold">Fastrack Speedmaster</p>
                                <p class="text-[9px] text-gray-500">Moonwatch Pro</p>
                            </div>
                        </div>
                    </td>
                    <td class="px-6 py-4 text-center text-gray-400">Fastrack</td>
                    <td class="px-6 py-4 text-center">
                        <span class="bg-white/5 text-gray-400 px-3 py-1 rounded-md border border-white/5">Gray</span>
                    </td>
                    <td class="px-6 py-4 text-center text-white font-medium">₹6,000</td>
                    <td class="px-6 py-4 text-center text-gray-400">20%</td>
                    <td class="px-6 py-4 text-center text-[#ff6b6b]">
                        <i class="fa-solid fa-percent border border-current p-1 rounded-sm text-[8px]"></i>
                    </td>
                    <td class="px-6 py-4 text-center">
                        <div class="flex items-center justify-center space-x-1.5">
                            <span class="text-white">3</span>
                            <span class="bg-[#2c1d1d] text-[#ff6b6b] px-2 py-0.5 rounded text-[8px] font-bold uppercase">Low</span>
                        </div>
                    </td>
                    <td class="px-6 py-4 text-center">
                        <span class="bg-[#14291d] text-[#4ade80] px-3 py-1 rounded-full text-[9px] font-bold flex items-center justify-center w-fit mx-auto">
                            <span class="w-1 h-1 bg-[#4ade80] rounded-full mr-1.5"></span> Active
                        </span>
                    </td>
                    <td class="px-5 py-4 text-right space-x-2 text-gray-500">
                        <button class="hover:text-white"><i class="fa-solid fa-eye text-[12px]"></i></button>
                        <button class="hover:text-white"><i class="fa-solid fa-pen text-[12px]"></i></button>
                        <button class="hover:text-red-500"><i class="fa-solid fa-trash text-[12px]"></i></button>
                    </td>
                </tr>

                <tr class="hover:bg-white/[0.02] transition">
                    <td class="px-6 py-4">
                        <div class="flex items-center space-x-3">
                            <div class="w-10 h-10 bg-white/5 rounded-full flex items-center justify-center overflow-hidden border border-white/10">
                                <img src="/images/casio.png" alt="Watch" class="w-8 h-8 object-contain">
                            </div>
                            <div>
                                <p class="text-white font-bold">Casio G-Shock</p>
                                <p class="text-[9px] text-gray-500">Mudmaster</p>
                            </div>
                        </div>
                    </td>
                    <td class="px-6 py-4 text-center text-gray-400">Casio</td>
                    <td class="px-6 py-4 text-center">
                        <span class="bg-white/5 text-gray-400 px-3 py-1 rounded-md border border-white/5">Silver</span>
                    </td>
                    <td class="px-6 py-4 text-center text-white font-medium">₹3,995</td>
                    <td class="px-6 py-4 text-center text-gray-400">40%</td>
                    <td class="px-6 py-4 text-center text-gray-600">
                        <i class="fa-solid fa-circle-xmark text-[10px]"></i>
                    </td>
                    <td class="px-6 py-4 text-center">
                        <div class="flex items-center justify-center space-x-1.5">
                            <span class="text-gray-500">0</span>
                            <span class="bg-[#1f1f1f] text-gray-500 px-2 py-0.5 rounded text-[8px] font-bold uppercase">Out</span>
                        </div>
                    </td>
                    <td class="px-6 py-4 text-center">
                        <span class="bg-white/5 text-gray-500 px-3 py-1 rounded-full text-[9px] font-bold flex items-center justify-center w-fit mx-auto">
                            <span class="w-1 h-1 bg-gray-500 rounded-full mr-1.5"></span> Inactive
                        </span>
                    </td>
                    <td class="px-5 py-4 text-right space-x-2 text-gray-500">
                        <button class="hover:text-white"><i class="fa-solid fa-eye text-[12px]"></i></button>
                        <button class="hover:text-white"><i class="fa-solid fa-pen text-[12px]"></i></button>
                        <button class="hover:text-red-500"><i class="fa-solid fa-trash text-[12px]"></i></button>
                    </td>
                </tr>
            </tbody>
        </table>

        <div class="p-6 flex items-center justify-between text-[10px] text-gray-500 border-t border-white/5">
            <p>Showing 1-5 of 85 watches</p>
            <div class="flex items-center space-x-2">
                <button class="px-3 py-1 hover:text-white transition">Previous</button>
                <button class="w-6 h-6 bg-[#4ade80] text-black font-bold rounded-full">1</button>
                <button class="w-6 h-6 flex items-center justify-center hover:text-white transition">2</button>
                <button class="w-6 h-6 flex items-center justify-center hover:text-white transition">3</button>
                <button class="px-3 py-1 hover:text-white transition">Next</button>
            </div>
        </div>
    </div>
</main>

