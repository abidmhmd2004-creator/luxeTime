<main class="flex-grow">
  <!-- Hero Section -->
  <section class="relative mx-auto max-w-[1440px] px-4 py-6 md:px-10">
    <div class="overflow-hidden rounded-3xl bg-[#1c2e24]">
      <div
        class="relative flex min-h-[500px] md:min-h-[600px] flex-col justify-end bg-cover bg-center p-8 md:p-16 lg:items-start"
        data-alt="Close up of a luxury wrist watch on dark background"
        style="
          background-image: linear-gradient(
              to right,
              rgba(0, 0, 0, 0.8) 0%,
              rgba(0, 0, 0, 0.3) 100%
            ),
            url('/images/Cinematic-Watch.jfif');
        "
      >
        <div class="relative z-10 flex flex-col gap-4 max-w-2xl animate-fade-in-up">
          <span
            class="inline-block w-fit rounded-full bg-primary/20 px-3 py-1 text-xs font-bold uppercase tracking-wider text-primary backdrop-blur-sm border border-primary/20"
            >New Collection</span
          >
          <h1
            class="text-4xl font-black leading-tight tracking-tight text-white md:text-6xl lg:text-7xl"
          >
            Find Your Perfect <span class="text-primary">Timepiece</span>
          </h1>
          <p class="max-w-md text-lg text-gray-300 md:text-xl">
            Discover luxury craftsmanship combined with modern aesthetics. Elevate your style today.
          </p>
          <div class="mt-4 flex flex-wrap gap-4 text-sm text-gray-400 font-medium">
            <span class="flex items-center gap-1"
              ><span class="material-symbols-outlined text-primary text-[18px]"
                >local_shipping</span
              >
              Free Shipping</span
            >
            <span class="hidden md:inline">·</span>
            <span class="flex items-center gap-1"
              ><span class="material-symbols-outlined text-primary text-[18px]">replay</span> 7-Day
              Returns</span
            >
            <span class="hidden md:inline">·</span>
            <span class="flex items-center gap-1"
              ><span class="material-symbols-outlined text-primary text-[18px]">verified</span> 100%
              Authentic</span
            >
          </div>
          <div class="mt-6 flex flex-wrap gap-4">
            <button
              onclick="window.location.href='shop'"
              class="rounded-full bg-primary px-8 py-4 text-base font-bold text-black hover:bg-white transition-colors duration-300 shadow-[0_0_20px_rgba(56,224,123,0.3)]"
            >
              Shop Watches
            </button>
            <!-- <button
                            class="rounded-full border border-white/20 bg-white/10 px-8 py-4 text-base font-bold text-white backdrop-blur-sm hover:bg-white/20 transition-colors">
                            View Lookbook
                        </button> -->
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- Featured Collections (Cards with horizontal layout) -->
  <section class="mx-auto max-w-[1440px] px-4 py-16 md:px-10">
    <h2 class="mb-8 text-3xl font-bold text-white md:text-4xl">Browse by Category</h2>

    <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
      <% categories.forEach(cat=> { %>

      <div
        class="relative flex min-h-[300px] flex-col justify-center overflow-hidden rounded-3xl bg-[#1c2e24] p-8 md:p-12"
      >
        <!-- Background Image -->
        <div
          class="absolute inset-0 bg-cover bg-center opacity-60"
          style="
            background-image: url('<%= cat.name === 'Men' ? '/images/banner-watch.jfif' : '/images/banner-watch1.jfif' %>')"
        ></div>

        <div class="absolute inset-0 bg-gradient-to-r from-black/90 to-transparent"></div>

        <div class="relative z-10 max-w-sm">
          <h3 class="text-2xl font-bold text-white md:text-3xl">Shop By <%= cat.name %></h3>

          <p class="mt-2 text-gray-300">Discover our exclusive <%= cat.name %> collection.</p>

          <!-- IMPORTANT PART -->
          <a
            href="/shop?category=<%= cat._id %>"
            class="mt-6 inline-flex items-center gap-2 text-sm font-bold uppercase text-primary hover:text-white transition-colors"
          >
            Explore Collection
            <span class="material-symbols-outlined text-base">arrow_forward</span>
          </a>
        </div>
      </div>

      <% }) %>
    </div>
  </section>
  <section class="bg-[#1c2e24]/30 py-16">
    <div class="mx-auto max-w-[1440px] px-4 md:px-10">
      <div class="mb-10 flex items-end justify-between">
        <div class="text-left">
          <!-- <span class="text-sm font-bold uppercase tracking-widest text-[#22c55e]">Fresh Drops</span> -->
          <h2 class="mt-2 text-3xl font-bold text-white md:text-4xl">New Arrivals</h2>
        </div>
        <a
          href="/shop"
          class="group flex items-center gap-2 text-xs font-bold uppercase tracking-widest text-[#38e07b] hover:text-white transition-colors duration-300"
        >
          View All Products
          <span
            class="material-symbols-outlined text-sm transition-transform group-hover:translate-x-1"
            >arrow_forward</span
          >
        </a>
      </div>

      <div class="grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-4">
        <% newArrivals.forEach(product=> { const v = product.variant; const image =
        v?.images?.[0]?.url || "/images/placeholder.png"; %>
        <div
          class="group flex flex-col rounded-3xl bg-[#0a0a0a] p-4 border border-white/5 hover:border-[#22c55e]/30 transition-all duration-300 relative"
        >
          <a href="/product/<%= product._id %>" class="flex flex-col flex-1 z-10">
            <div class="relative aspect-square overflow-hidden rounded-2xl bg-[#111111]">
              <img
                src="<%= image %>"
                alt="<%= product.name %>"
                class="h-full w-full object-cover group-hover:scale-105 transition duration-500"
              />
            </div>
            <div class="mt-4 flex flex-col flex-1">
              <h3 class="text-lg font-bold text-white truncate"><%= product.name %></h3>
              <p class="text-sm text-gray-400"><%= product.category?.name %></p>
            </div>
          </a>

          <div class="mt-auto pt-4 z-20">
            <div class="mb-4 text-center">
              <% if(v.appliedOffer> 0){ %>
              <span class="text-xs line-through text-gray-500"
                >₹<%= v.basePrice.toLocaleString('en-IN') %></span
              >
              <% } %>
              <div class="text-xl font-bold text-[#22c55e]">
                ₹<%= v.finalPrice.toLocaleString('en-IN') %>
              </div>
            </div>

            <div class="z-20">
              <a
                href="/product/<%= product._id %>"
                class="block w-full py-2.5 bg-zinc-900 border border-white/10 text-[#38e07b] text-center text-[10px] font-bold rounded-xl hover:bg-[#38e07b] hover:text-black hover:border-[#38e07b] transition-all duration-300 uppercase tracking-widest"
              >
                Discover More
              </a>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
  </section>
  <!-- Benefits Strip -->
  <section class="mb-20 border-y border-[#29382f] bg-[#111714]">
    <div
      class="mx-auto flex max-w-[1440px] flex-wrap justify-center gap-8 px-4 py-12 md:justify-between md:px-10"
    >
      <div class="flex items-center gap-4">
        <div
          class="flex h-12 w-12 items-center justify-center rounded-full bg-[#1c2e24] text-primary"
