    </main>

    <div id="addressModal"
        class="fixed inset-0 bg-black/80 backdrop-blur-sm z-[100] hidden items-center justify-center p-6">
        <div class="glass-panel w-full max-w-lg rounded-2xl p-6 shadow-2xl scale-95 opacity-0 transition-all duration-300"
            id="modalContent">
            <div class="flex justify-between items-center mb-6">
                <h3 class="text-lg font-black uppercase tracking-tighter">New Address Details</h3>
                <button onclick="toggleModal(false)" class="text-zinc-500 hover:text-white"><i
                        class="fa-solid fa-xmark text-sm"></i></button>
            </div>

            <form class="space-y-4">
                <div>
                    <label class="text-[9px] font-black text-zinc-500 uppercase tracking-widest block mb-1">Full
                        Name</label>
                    <input type="text" placeholder="Enter your full name"
                        class="w-full bg-[#121513] border border-white/10 rounded-lg py-2.5 px-4 text-xs outline-none focus:border-[#22c55e]/40 transition-all">
                </div>

                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label class="text-[9px] font-black text-zinc-500 uppercase tracking-widest block mb-1">Mobile
                            Number</label>
                        <input type="text" placeholder="+91-000-000-0000"
                            class="w-full bg-[#121513] border border-white/10 rounded-lg py-2.5 px-4 text-xs outline-none focus:border-[#22c55e]/40 transition-all">
                    </div>
                    <div>
                        <label
                            class="text-[9px] font-black text-zinc-500 uppercase tracking-widest block mb-1">Pincode</label>
                        <input type="text" placeholder="ZIP Code"
                            class="w-full bg-[#121513] border border-white/10 rounded-lg py-2.5 px-4 text-xs outline-none focus:border-[#22c55e]/40 transition-all">
                    </div>
                </div>

                <div>
                    <label class="text-[9px] font-black text-zinc-500 uppercase tracking-widest block mb-1">Address
                        Line</label>
                    <input type="text" placeholder="House No, Street"
                        class="w-full bg-[#121513] border border-white/10 rounded-lg py-2.5 px-4 text-xs outline-none focus:border-[#22c55e]/40 transition-all">
                </div>

                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label
                            class="text-[9px] font-black text-zinc-500 uppercase tracking-widest block mb-1">City</label>
                        <input type="text" placeholder="City"
                            class="w-full bg-[#121513] border border-white/10 rounded-lg py-2.5 px-4 text-xs outline-none">
                    </div>
                    <div>
                        <label
                            class="text-[9px] font-black text-zinc-500 uppercase tracking-widest block mb-1">State</label>
                        <select
                            class="w-full bg-[#121513] border border-white/10 rounded-lg py-2.5 px-4 text-xs outline-none text-zinc-400">
                            <option>Select State</option>
                            <option>New York</option>
                            <option>California</option>
                        </select>
                    </div>
                </div>

                <div class="flex gap-3 pt-2">
                    <button type="button" onclick="toggleModal(false)"
                        class="flex-1 border border-white/10 py-3 rounded-lg text-[9px] font-black uppercase tracking-widest hover:bg-white/5 transition-all">Cancel</button>
                    <button type="button"
                        class="flex-1 bg-[#22c55e] text-black py-3 rounded-lg text-[9px] font-black uppercase tracking-widest hover:brightness-110 transition-all">Save
                        Address</button>
                </div>
            </form>
        </div>
    </div>

    <script>
        function toggleModal(show) {
            const modal = document.getElementById('addressModal');
            const content = document.getElementById('modalContent');
            if (show) {
                modal.classList.remove('hidden');
                modal.classList.add('flex');
                setTimeout(() => {
                    content.classList.remove('scale-95', 'opacity-0');
                    content.classList.add('scale-100', 'opacity-100');
                }, 10);
            } else {
                content.classList.remove('scale-100', 'opacity-100');
                content.classList.add('scale-95', 'opacity-0');
                setTimeout(() => {
                    modal.classList.add('hidden');
                    modal.classList.remove('flex');
                }, 300);
            }
        }
    </script>