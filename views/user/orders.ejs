<div
  class="max-w-7xl mx-auto flex flex-col lg:flex-row gap-5 px-4 sm:px-6 py-6 text-white bg-[#050605]"
>
  <aside class="w-full lg:w-64 flex-shrink-0"><%- include('../partials/sidebar') %></aside>

  <main class="flex-1 space-y-6">
    <div class="flex flex-col md:flex-row md:items-end justify-between gap-4">
      <div>
        <h1 class="text-2xl font-bold">Order History</h1>
        <p class="text-sm text-neutral-500 mt-1 italic">Manage and track your recent purchases</p>
      </div>

      <div class="flex items-center gap-2">
        <div class="relative">
          <input
            type="text"
            id="orderSearchInput"
            placeholder="Search by Order ID..."
            value="<%= typeof searchQuery !== 'undefined' ? searchQuery : '' %>"
            class="bg-[#0d130f] border border-white/10 text-sm rounded-lg px-4 py-2 w-full md:w-64 focus:outline-none focus:border-green-500/50 transition-all text-white"
          />
        </div>
        <button
          onclick="handleOrderSearch()"
          class="bg-green-500 text-black text-[11px] font-bold px-4 py-2 rounded uppercase tracking-wider hover:bg-green-600 transition-all"
        >
          Search
        </button>
        <button
          onclick="clearOrderSearch()"
          class="border border-white/10 text-neutral-400 text-[11px] font-bold px-4 py-2 rounded uppercase tracking-wider hover:bg-white/5 transition-all"
        >
          Clear
        </button>
      </div>
    </div>

    <div class="space-y-4">
      <% if (orders && orders.length> 0) { %> <% orders.forEach(order=> { %>
      <div
        class="bg-[#0d130f] border border-white/10 rounded-xl p-5 hover:border-yellow-600/20 transition-all duration-300"
      >
        <% if (order.paymentStatus==='FAILED' ) { %>
        <div
          class="mb-5 p-4 rounded-lg bg-red-500/5 border border-red-500/10 flex items-center justify-between gap-4"
        >
          <div class="flex items-center gap-3">
            <i class="fa-solid fa-circle-exclamation text-red-500 text-sm"></i>
            <div>
              <h4 class="text-[10px] font-black uppercase tracking-widest text-red-500">
                Payment Failed
              </h4>
              <p class="text-[9px] text-neutral-500 leading-tight">
                Your payment was unsuccessful. Please retry to complete your order.
              </p>
            </div>
          </div>
        </div>
        <% } %>
        <div class="flex justify-between items-start mb-6">
          <div class="space-y-1">
            <div class="flex items-center gap-3">
              <span class="text-xs font-mono text-neutral-600"> <%= order.orderId %> </span>

              <% let statusClasses='text-neutral-500 border-neutral-800' ;
                                                if(order.orderStatus==='DELIVERED' )
                                                statusClasses='text-green-500 border-green-500/20' ;
                                                if(order.orderStatus==='CANCELLED' )
                                                statusClasses='text-red-500 border-red-500/20' ; %>
              <span
                class="text-[9px] font-bold px-2 py-0.5 border rounded uppercase tracking-widest <%= statusClasses %>"
              >
                <%= order.orderStatus %>
              </span>
            </div>
            <p class="text-xs text-neutral-400 italic">
              Placed on -
              <span class="text-neutral-300 not-italic">
                <%= new Date(order.createdAt).toLocaleDateString('en-IN') %>
              </span>
            </p>
          </div>
          <div class="text-right">
            <p class="text-lg font-bold tracking-tight">
              ₹<%= order.totalAmount.toLocaleString('en-IN') %>
            </p>
          </div>
        </div>

        <div class="space-y-3 mb-6">
          <% order.items.forEach(item=> { %>
          <div class="flex items-center justify-between py-2 border-b border-white/5 last:border-0">
            <div class="flex items-center gap-4">
              <div
                class="w-10 h-10 bg-black rounded border border-white/10 flex-shrink-0 overflow-hidden"
              >
                <img
                  src="<%= item.variant.images[0].url %>"
                  alt=""
                  class="w-full h-full object-contain"
                />
              </div>
              <div>
                <p class="text-sm font-medium text-neutral-200"><%= item.product.name %></p>
                <p class="text-[11px] text-neutral-500 italic">
                  Qty: <span class="not-italic text-neutral-400"> <%= item.quantity %> </span>
                </p>
              </div>
            </div>
            <p class="text-sm text-neutral-400">₹<%= item.price.toLocaleString('en-IN') %></p>
          </div>
          <% }) %>
        </div>

        <div
          class="flex flex-col sm:flex-row justify-between items-center gap-4 pt-4 border-t border-white/5"
        >
          <div class="flex items-center gap-2">
            <span class="material-symbols-outlined text-base text-neutral-600">
              <%= order.orderStatus==='DELIVERED' ? 'check_circle' : 'local_shipping' %>
            </span>
            <span class="text-xs text-neutral-500 italic">
              <% if (order.orderStatus==='DELIVERED' ) { %> Delivered on -
              <span class="text-neutral-200 font-medium not-italic">
                <%= new Date(order.updatedAt).toLocaleDateString('en-IN', { day: 'numeric' , month:
                'short' , year: 'numeric' }) %>
              </span>
              <% } else if (order.orderStatus==='CANCELLED' ) { %>
              Order was - <span class="text-red-500/70 not-italic">cancelled</span>
              <% } else { %>
              <% const estDate=new Date(order.createdAt);
                                                            estDate.setDate(estDate.getDate() + 5); %>
              Estimated delivery by -
              <span class="text-neutral-200 font-medium not-italic">
                <%= estDate.toLocaleDateString('en-IN', { day: 'numeric' , month: 'short' }) %>
              </span>
              <% } %>
            </span>
          </div>

          <div class="flex gap-3 w-full sm:w-auto">
            <a
              href="/orders/<%= order._id %>/invoice"
              class="flex-1 sm:flex-none text-center text-[11px] font-bold border border-white/10 px-6 py-2 rounded tracking-widest hover:bg-white/5 transition-colors uppercase"
            >
              Invoice
            </a>
            <a
              href="/orderDetails/<%= order._id %>"
              class="flex-1 sm:flex-none text-center text-[11px] font-bold bg-green-500 text-black px-6 py-2 rounded tracking-widest hover:bg-green-600 transition-colors uppercase"
            >
              View Details
            </a>
          </div>
        </div>
      </div>
      <% }) %>
      <% } else { %>
      <div class="py-20 text-center border border-dashed border-white/10 rounded-xl">
        <p class="text-neutral-500 italic">No orders found.</p>
      </div>
      <% } %>
    </div>
    <% if (orders && orders.length> 0) { %>
    <div class="flex items-center justify-center py-10 mt-6">
      <nav class="flex items-center gap-4">
        <% if (currentPage> 1) { %>
        <a
          href="/orders?page=<%= currentPage - 1 %>&search=<%= searchQuery || '' %>"
          class="group flex items-center gap-2 px-4 py-2 bg-[#0d130f] border border-white/5 rounded-full text-neutral-400 hover:text-green-500 hover:border-green-500/30 hover:bg-green-500/5 transition-all duration-300"
        >
          <i class="fa-solid fa-chevron-left text-[10px]"></i>
          <span class="text-[11px] font-bold uppercase tracking-widest">Prev</span>
        </a>
        <% } else { %>
        <div
          class="flex items-center gap-2 px-4 py-2 bg-transparent border border-white/5 rounded-full text-neutral-700 opacity-50 cursor-not-allowed"
        >
          <i class="fa-solid fa-chevron-left text-[10px]"></i>
          <span class="text-[11px] font-bold uppercase tracking-widest">Prev</span>
        </div>
        <% } %>

        <div
          class="flex items-center px-6 py-2 bg-gradient-to-b from-[#111814] to-[#0d130f] border border-green-500/20 rounded-full shadow-[0_0_20px_rgba(34,197,94,0.05)]"
        >
          <span class="text-xs font-black text-white">
            <span class="text-green-500"> <%= currentPage %> </span>
            <span class="mx-2 text-neutral-600">/</span>
            <span class="text-neutral-400"> <%= totalPages %> </span>
          </span>
        </div>

        <% if (currentPage < totalPages) { %>
        <a
          href="/orders?page=<%= currentPage + 1 %>&search=<%= searchQuery || '' %>"
          class="group flex items-center gap-2 px-4 py-2 bg-[#0d130f] border border-white/5 rounded-full text-neutral-400 hover:text-green-500 hover:border-green-500/30 hover:bg-green-500/5 transition-all duration-300"
        >
          <span class="text-[11px] font-bold uppercase tracking-widest">Next</span>
          <i class="fa-solid fa-chevron-right text-[10px]"></i>
        </a>
        <% } else { %>
        <div
          class="flex items-center gap-2 px-4 py-2 bg-transparent border border-white/5 rounded-full text-neutral-700 opacity-50 cursor-not-allowed"
        >
          <span class="text-[11px] font-bold uppercase tracking-widest">Next</span>
          <i class="fa-solid fa-chevron-right text-[10px]"></i>
        </div>
        <% } %>
      </nav>
    </div>
    <% } %>
  </main>
</div>

<script>
  function handleOrderSearch() {
    const input = document.getElementById('orderSearchInput');
    const query = input.value.trim();

    if (!query) return;

    window.location.href = `/orders?search=${encodeURIComponent(query)}`;
  }

  function clearOrderSearch() {
    window.location.href = '/orders';
  }

  document.getElementById('orderSearchInput').addEventListener('keypress', function (e) {
    if (e.key === 'Enter') {
      handleOrderSearch();
    }
  });
</script>
