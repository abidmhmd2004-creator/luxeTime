<link
  rel="stylesheet"
  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
/>
<style>
  @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700;900&display=swap');

  body {
    font-family: 'Inter', sans-serif;
    background-color: #0a0c0b;
    color: #ffffff;
    margin: 0;
    /* Changed from hidden to auto to allow mobile scrolling */
    overflow-x: hidden;
    overflow-y: auto;
  }

  .main-wrapper {
    display: flex;
    /* Changed from fixed height to min-height for mobile flexibility */
    min-height: 100vh;
    width: 100vw;
  }

  .content-area {
    flex-grow: 1;
    padding: 1.5rem 1rem; /* Reduced padding for mobile */
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
  }

  /* Desktop padding adjustment */
  @media (min-width: 768px) {
    .content-area {
      padding: 2rem 3rem;
    }
  }

  .luxury-card {
    background: linear-gradient(145deg, #111814 0%, #0d110e 100%);
    border: 1px solid rgba(255, 255, 255, 0.05);
    width: 100%;
    max-width: 900px;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4);
    flex-shrink: 0;
  }

  .stat-card {
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 255, 255, 0.05);
    flex-shrink: 0;
  }

  .code-container {
    background: #161d18;
    border: 1px dashed rgba(34, 197, 94, 0.3);
    transition: all 0.3s ease;
  }

  .how-it-works-container {
    background: rgba(255, 255, 255, 0.01);
    border-radius: 1.5rem;
    border: 1px solid rgba(255, 255, 255, 0.03);
  }

  .benefit-circle {
    background: #ffffff;
    width: 48px;
    height: 48px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1rem;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
  }

  .share-btn-pill {
    transition: all 0.3s ease;
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 255, 255, 0.05);
  }

  .share-btn-pill:hover {
    background: rgba(255, 255, 255, 0.05);
    transform: translateY(-2px);
  }
</style>

<div class="main-wrapper">
  <%- include('../partials/sidebar') %>

  <main class="content-area">
    <div class="w-full max-w-4xl text-center mb-8 mt-4">
      <p class="text-[9px] font-black text-[#22c55e] uppercase tracking-[0.4em] mb-1">
        Privilege Club
      </p>
      <h1 class="text-3xl font-black uppercase tracking-tighter">Referral Dashboard</h1>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 w-full max-w-[900px] mb-8">
      <div class="stat-card rounded-xl p-5 flex items-center gap-4">
        <div class="w-10 h-10 bg-[#22c55e]/10 rounded-full flex items-center justify-center">
          <i class="fas fa-wallet text-[#22c55e] text-sm"></i>
        </div>
        <div>
          <p class="text-[10px] font-bold text-zinc-500 uppercase">Total Earnings</p>
          <h4 class="text-lg font-black tracking-tight text-white">₹<%= totalEarnings %></h4>
        </div>
      </div>
      <div class="stat-card rounded-xl p-5 flex items-center gap-4">
        <div class="w-10 h-10 bg-blue-500/10 rounded-full flex items-center justify-center">
          <i class="fas fa-users text-blue-500 text-sm"></i>
        </div>
        <div>
          <p class="text-[10px] font-bold text-zinc-500 uppercase">Referred</p>
          <h4 class="text-lg font-black tracking-tight text-white"><%= referredCount %> People</h4>
        </div>
      </div>
      <div class="stat-card rounded-xl p-5 flex items-center gap-4">
        <div class="w-10 h-10 bg-purple-500/10 rounded-full flex items-center justify-center">
          <i class="fas fa-ticket text-purple-500 text-sm"></i>
        </div>
        <div>
          <p class="text-[10px] font-bold text-zinc-500 uppercase">Pending</p>
          <h4 class="text-lg font-black tracking-tight text-white">₹400</h4>
        </div>
      </div>
    </div>

    <div class="luxury-card rounded-[1.5rem] md:rounded-[2rem] overflow-hidden mb-12">
      <div class="grid grid-cols-1 lg:grid-cols-2">
        <div
          class="p-6 md:p-8 lg:p-12 border-b lg:border-b-0 lg:border-r border-white/5 flex flex-col justify-center"
        >
          <div
            class="w-12 h-12 bg-[#22c55e] rounded-xl flex items-center justify-center shadow-lg mb-6"
          >
            <i class="fas fa-gift text-black"></i>
          </div>
          <h2 class="text-2xl font-black uppercase tracking-tight mb-4 leading-tight">
            Invite Friends & <br />Earn Rewards
          </h2>
          <p class="text-zinc-500 text-sm leading-relaxed mb-8">
            Share your unique referral code to get ₹500 credited to your wallet when they join, and
            your friend receives ₹200 too.
          </p>

          <p class="text-[9px] font-black text-zinc-600 uppercase tracking-widest mb-3">
            Your Unique Code
          </p>
          <div class="code-container rounded-xl p-4 flex items-center justify-between">
            <span
              id="referralCode"
              class="text-base md:text-xl font-black tracking-widest uppercase text-white"
            >
              <%= referralCode %>
            </span>
            <button
              onclick="copyToClipboard('<%= referralCode %>')"
              class="text-[#22c55e] text-[10px] font-black uppercase hover:text-white transition-colors ml-2"
            >
              <i id="codeIcon" class="far fa-copy mr-1"></i> Copy
            </button>
          </div>
        </div>

        <div class="p-6 md:p-8 lg:p-12 flex flex-col justify-center bg-black/10">
          <div class="how-it-works-container p-6 md:p-8 text-center">
            <h3 class="text-[11px] font-black text-zinc-400 uppercase tracking-[0.3em] mb-10">
              How It Works
            </h3>

            <div class="grid grid-cols-2 gap-4">
              <div class="flex flex-col items-center">
                <div class="benefit-circle">
                  <i class="fas fa-user-plus text-black text-lg"></i>
                </div>
                <span class="text-xl md:text-2xl font-black text-white mb-1">₹500</span>
                <p
                  class="text-[8px] md:text-[9px] font-bold text-zinc-500 uppercase leading-tight px-1"
                >
                  You earn on signup
                </p>
              </div>

              <div class="flex flex-col items-center">
                <div class="benefit-circle">
                  <i class="fas fa-gift text-black text-lg"></i>
                </div>
                <span class="text-xl md:text-2xl font-black text-white mb-1">₹200</span>
                <p
                  class="text-[8px] md:text-[9px] font-bold text-zinc-500 uppercase leading-tight px-1"
                >
                  Friend gets bonus
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="px-8 py-6 bg-black/20 border-t border-white/5">
        <span
          class="text-[9px] font-black flex justify-center text-center mb-4 text-zinc-600 uppercase tracking-widest mr-2"
          >Share Your Code:</span
        >
        <div class="flex flex-wrap items-center justify-center gap-4">
          <button
            onclick="shareLink('whatsapp')"
            class="share-btn-pill px-5 py-2 rounded-full flex items-center gap-2 text-[10px] font-bold text-zinc-400 hover:text-[#25D366]"
          >
            <i class="fab fa-whatsapp"></i> WhatsApp
          </button>
          <button
            onclick="shareLink('email')"
            class="share-btn-pill px-5 py-2 rounded-full flex items-center gap-2 text-[10px] font-bold text-zinc-400 hover:text-blue-400"
          >
            <i class="far fa-envelope"></i> Email
          </button>
          <button
            onclick="shareLink('twitter')"
            class="share-btn-pill px-5 py-2 rounded-full flex items-center gap-2 text-[10px] font-bold text-zinc-400 hover:text-white"
          >
            <i class="fab fa-x-twitter"></i> Share
          </button>
        </div>
      </div>
    </div>
  </main>
</div>

<script>
  function copyToClipboard(text) {
    navigator.clipboard.writeText(text);
    const icon = document.getElementById('codeIcon');
    const originalClass = icon.className;
    icon.className = 'fas fa-check mr-1';
    setTimeout(() => (icon.className = originalClass), 2000);
  }

  function shareLink(platform) {
    const code = document.getElementById('referralCode').innerText;
    const msg = encodeURIComponent(
      `Elevate your collection. Use code ${code} for ₹100 off at Luxe Time: https://luxetime.com/invite/${code}`
    );
    const urls = {
      whatsapp: `https://wa.me/?text=${msg}`,
      email: `mailto:?subject=Exclusive Invitation&body=${msg}`,
      twitter: `https://twitter.com/intent/tweet?text=${msg}`,
    };
    window.open(urls[platform], '_blank');
  }
</script>
