<script>
    const links = document.querySelectorAll(".sidebar-link");
    const currentPath = window.location.pathname;

    links.forEach(link => {
        
        link.classList.remove("bg-green-700/50", "text-white", "font-medium");

        // Match current URL
        if (link.getAttribute("href") === currentPath) {
            link.classList.add("bg-green-700/50", "text-white", "font-medium");
        }

        // Click handling (client-side highlight)
        link.addEventListener("click", () => {
            links.forEach(l =>
                l.classList.remove("bg-green-700/50", "text-white", "font-medium")
            );

            link.classList.add("bg-green-700/50", "text-white", "font-medium");
        });
    });
</script>