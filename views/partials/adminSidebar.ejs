<script>
    const ADMIN_ACTIVE_CLASSES = "bg-green-700";
    const ADMIN_INACTIVE_CLASSES = "hover:bg-neutral-800";

    const adminLinks = document.querySelectorAll(".admin-sidebar-link");
    const currentPath = window.location.pathname;

    adminLinks.forEach(link => {
        const linkPath = link.getAttribute("href");

        link.classList.remove(ADMIN_ACTIVE_CLASSES, ...ADMIN_INACTIVE_CLASSES.split(' '));

        if (linkPath === currentPath) {
            link.classList.add(ADMIN_ACTIVE_CLASSES);
        } else {
            link.classList.add(...ADMIN_INACTIVE_CLASSES.split(' '));
        }

        link.addEventListener("click", () => {
            adminLinks.forEach(l => {
                l.classList.remove(ADMIN_ACTIVE_CLASSES);
                l.classList.add(...ADMIN_INACTIVE_CLASSES.split(' '));
            });

            link.classList.remove(...ADMIN_INACTIVE_CLASSES.split(' '));
            link.classList.add(ADMIN_ACTIVE_CLASSES);
        });
    });
</script>